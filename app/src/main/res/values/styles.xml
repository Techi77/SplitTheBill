<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.SplitTheBill">
        <!-- Customize your theme here. -->
        <item name="textColor">@color/black_opacity_60</item>
        <item name="bg_color">@color/white</item>
        <item name="borderColor">@color/dialog_border</item>
        <item name="mainBlue">@color/main_blue</item>
        <item name="mainBlueInactive">@color/main_blue_opacity_50</item>
        <item name="editTextColor">@color/editTextColor</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.SplitTheBill.DarkTheme">

        <item name="textColor">@color/white_opacity_60</item>
        <item name="bg_color">@color/gray_800</item>
        <item name="borderColor">@color/dialog_border_dark</item>
        <item name="mainBlue">@color/main_blue_dark</item>
        <item name="mainBlueInactive">@color/main_blue_dark_opacity_50</item>
        <item name="editTextColor">@color/editTextColor_dark</item>
    </style>

    <style name="OutlinedMaterialDialogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="enforceTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/mainBlue</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">195dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?mainBlueInactive</item>
        <item name="tickColorInactive">?editTextColor</item>
        <item name="textColor">?mainBlueInactive</item>
        <item name="hintTextColor">?mainBlueInactive</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputEditTextStyle">

    </style>
</resources>